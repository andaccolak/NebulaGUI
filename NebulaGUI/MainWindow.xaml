        <TextBlock FontSize="30" HorizontalAlignment="Left" TextAlignment="Center"  Margin="1449,406,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442" Height="69" Text="Uydu Duruşu" FontWeight="Bold" Foreground="White" />
        <Ellipse  Margin="1478,672,58,324" Fill="#9F9F9F" Opacity="0.6"/>
        <Ellipse  Margin="1590,682,170,335" Fill="#7C7C7C" Opacity="0.9"/>
        <TextBlock FontSize="20" HorizontalAlignment="Left" TextAlignment="Center"  Margin="123,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356" Height="24" Text="Alarm Sistemi" FontWeight="Bold" Foreground="White"/>
        <TextBlock FontSize="15" HorizontalAlignment="Left" TextAlignment="Left"  Margin="188,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" Height="31" Text="Model Uydu İniş Hızı Sapması" FontWeight="Regular" Foreground="White"/>
        <TextBlock FontSize="15" HorizontalAlignment="Left" TextAlignment="Left"  Margin="187,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" Height="31" Text="Görev Yükü İniş Hızı Sapması" FontWeight="Regular" Foreground="White"/>
        <TextBlock FontSize="15" HorizontalAlignment="Left" TextAlignment="left"  Margin="188,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" Height="31" Text="Taşıyıcı Basınç Verisi Alınamaması" FontWeight="Regular" Foreground="White"/>
        <TextBlock FontSize="15" HorizontalAlignment="Left" TextAlignment="Left"  Margin="187,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="291" Height="31" Text="Görev Yükü Konum Verisinin Alınamaması" FontWeight="Regular" Foreground="White"/>
