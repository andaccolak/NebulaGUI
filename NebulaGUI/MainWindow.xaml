        <Ellipse Fill="Red" HorizontalAlignment="Left" Height="27" Margin="151,52,0,0" VerticalAlignment="Top" Width="27"/>
        <Ellipse Fill="Red" HorizontalAlignment="Left" Height="27" Margin="151,84,0,0" VerticalAlignment="Top" Width="27"/>
        <Ellipse Fill="Red" HorizontalAlignment="Left" Height="27" Margin="151,115,0,0" VerticalAlignment="Top" Width="27"/>
        <Ellipse Fill="Red" HorizontalAlignment="Left" Height="27" Margin="151,146,0,0" VerticalAlignment="Top" Width="27"/>
        <Ellipse Fill="Red" HorizontalAlignment="Left" Height="27" Margin="151,177,0,0" VerticalAlignment="Top" Width="27"/>
        <Border  Background="#455679" Margin="15,672,1421,24" BorderBrush="Black" BorderThickness="5"/>
        <Image Source="C:\Users\colak\OneDrive\Masaüstü\teknofest\image.png" Margin="358,251,1442,673" />
        <Image  x:Name="WebcamImage" Stretch="Uniform" Margin="27,414,1433,352" />
        <TextBlock FontSize="30" HorizontalAlignment="Left" TextAlignment="Center"  Margin="26,359,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442" Height="69" Text="Kamera Görüntüsü" FontWeight="Bold" Foreground="White"/>
        <TextBlock FontSize="30" HorizontalAlignment="Left" TextAlignment="Center"  Margin="25,680,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442" Height="69" Text="GPS Görüntüsü" FontWeight="Bold" Foreground="White"/>
        <Button x:Name="ayrilma" Content="Ayrılma Komutu" HorizontalAlignment="Left" Margin="16,186,0,0" VerticalAlignment="Top" Height="40" Width="105" Click="ayrilma_Click"/>
        <TextBox Visibility="Hidden" x:Name="komut_Copy" HorizontalAlignment="Left" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#8E939C" Margin="164,316,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Height="45" Width="136"/>
        <Button  Click="Button_Click" Opacity="0" Content="Button" HorizontalAlignment="Left" Margin="384,261,0,0" VerticalAlignment="Top" Height="44" Width="48"/>


    </Grid>
</Window>
