<Window x:Class="NebulaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:charts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
        xmlns:local="clr-namespace:NebulaGUI" xmlns:vm="clr-namespace:NebulaGUI.ViewModel" xmlns:helix="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1900">
    <Window.Resources>
        <!-- ViewModel instance'larını oluşturmak için Resource tanımları -->
        <vm:MainViewModel x:Key="vm1"/>

    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>


    <Grid Background="#22468B">
        <Rectangle HorizontalAlignment="Left" StrokeThickness="2" Fill="#455679" Height="210" Margin="139,16,0,0" Stroke="Black" VerticalAlignment="Top" Width="339"/>
        <Border Background="#455679" Margin="500,16,947,608" BorderBrush="Black" BorderThickness="5">
            <charts:CartesianChart  Zoom="X" DataContext="{StaticResource vm1}" DisableAnimations="True" Series="{Binding TemperatureSeries}" LegendLocation="Bottom" Margin="1,77,1,-5"/>

        </Border>
        <Image Source="C:\Users\colak\OneDrive\Masaüstü\teknofest\Artboard 6.png" Margin="-14,-15,1744,830" ></Image>
        <ListView ItemsSource="{Binding AllDatasReversed}" Margin="500,740,10,24">

            <ListView.View>
                <GridView >
                    <GridViewColumn Width="66" Header="PaketNo" DisplayMemberBinding="{Binding PaketNo}"/>
                    <GridViewColumn Width="66" Header="UyduStatusu" DisplayMemberBinding="{Binding UyduStatusu}"/>
                    <GridViewColumn Width="66" Header="HataKodu" DisplayMemberBinding="{Binding HataKodu}"/>
                    <GridViewColumn Width="66" Header="GondermeSaati" DisplayMemberBinding="{Binding GondermeSaati}"/>
                    <GridViewColumn Width="66" Header="Basinc1" DisplayMemberBinding="{Binding Basinc1}"/>
                    <GridViewColumn Width="66" Header="Basinc2" DisplayMemberBinding="{Binding Basinc2}"/>
                    <GridViewColumn Width="66" Header="Yukseklik1" DisplayMemberBinding="{Binding Yukseklik1}"/>
                    <GridViewColumn Width="66" Header="Yukseklik2" DisplayMemberBinding="{Binding Yukseklik2}"/>
                    <GridViewColumn Width="66" Header="IrtifaFarki" DisplayMemberBinding="{Binding IrtifaFarki}"/>
                    <GridViewColumn Width="66" Header="InişHizi" DisplayMemberBinding="{Binding InisHizi}"/>
                    <GridViewColumn Width="66" Header="Sicaklik" DisplayMemberBinding="{Binding Sicaklik}"/>
                    <GridViewColumn Width="66" Header="PilGerilimi" DisplayMemberBinding="{Binding PilGerilimi}"/>
                    <GridViewColumn Width="66" Header="GpsLatitude" DisplayMemberBinding="{Binding GpsLatitude}"/>
                    <GridViewColumn Width="66" Header="GpsLongitude" DisplayMemberBinding="{Binding GpsLongitude}"/>
                    <GridViewColumn Width="66" Header="GpsAltitude" DisplayMemberBinding="{Binding GpsAltitude}"/>
                    <GridViewColumn Width="66" Header="Pitch" DisplayMemberBinding="{Binding Pitch}"/>
                    <GridViewColumn Width="66" Header="Roll" DisplayMemberBinding="{Binding Roll}"/>
                    <GridViewColumn Width="66" Header="Yaw" DisplayMemberBinding="{Binding Yaw}"/>
                    <GridViewColumn Width="66" Header="RHRH" DisplayMemberBinding="{Binding RHRH}"/>
                    <GridViewColumn Width="66" Header="IoTData" DisplayMemberBinding="{Binding IoTData}"/>
                    <GridViewColumn Width="66" Header="Takımno" DisplayMemberBinding="{Binding TakimNo}"/>

                </GridView>
            </ListView.View>
        </ListView>
        <Border Background="#455679" Margin="969,16,478,608" BorderBrush="Black" BorderThickness="5">
            <charts:CartesianChart  Zoom="X" DataContext="{StaticResource vm1}" DisableAnimations="True" Series="{Binding SpeedSeries}" LegendLocation="Bottom" Margin="5,91,5,5"/>
        </Border>
        <Border Background="#455679" Margin="1438,16,10,608" BorderBrush="Black" BorderThickness="5">
            <charts:CartesianChart Zoom="X" DataContext="{StaticResource vm1}" DisableAnimations="True" Series="{Binding PressureSeries}" LegendLocation="Bottom" Margin="5,81,5,5"/>
        </Border>
        <Border Background="#455679" Margin="500,391,947,269" BorderBrush="Black" BorderThickness="5">
            <charts:CartesianChart  Zoom="X" DataContext="{StaticResource vm1}" DisableAnimations="True" Series="{Binding VoltageSeries}" LegendLocation="Bottom" Margin="5,81,5,5"/>
        </Border>
        <Border Background="#455679" Margin="969,391,478,269" BorderBrush="Black" BorderThickness="5">
            <charts:CartesianChart  Zoom="X" DataContext="{StaticResource vm1}" DisableAnimations="True" Series="{Binding AltitudeSeries}" LegendLocation="Bottom" Margin="13,86,9,5"/>
        </Border>
        <Border Background="#455679" Margin="1438,391,10,269" BorderBrush="Black" BorderThickness="3"/>
        <Border  Background="#455679" Margin="15,352,1421,341" BorderBrush="Black" BorderThickness="5"/>
